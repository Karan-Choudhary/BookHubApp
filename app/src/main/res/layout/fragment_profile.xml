<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment"
    android:background="@color/purple_700">


    <LinearLayout
        android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:gravity="center"
        android:layout_margin="0dp">
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlExtra"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

    <ImageView
        android:id="@+id/imgBeforeName"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/imgBeforeName"
        android:text="@string/karan_choudhary"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imgBeforeEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        android:layout_below="@+id/imgBeforeName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/imgBeforeName"
        android:text="@string/emailID"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/imgBeforePhone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_phone"
        android:layout_below="@+id/imgBeforeEmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtEmail"
        android:layout_toRightOf="@+id/imgBeforeName"
        android:text="@string/Phone"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imgBeforeAddress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_address"
        android:layout_below="@+id/imgBeforePhone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPhone"
        android:layout_toRightOf="@+id/imgBeforeName"
        android:text="@string/address"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"/>
    </RelativeLayout>

</RelativeLayout>